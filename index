<body>
    <h2>¿Quieres ser mi novia?</h2>
    <div class="frame">
        <button id="btn-si" class="btn">Sí</button>
        <button id="btn-no" class="btn">No</button>
    </div>

    <div id="carta">
        <div>
            💖 Sabía que dirías que sí, ¡te amo! 💖<br><br>
            🌹 Eres mi todo, mi razón de sonreír.<br>
            💕 Gracias por estar conmigo.<br>
            😍🥰😘
        </div>
        <div id="corazones">💘💝💖💗💓💞💟</div>
        <button id="cerrar">Cerrar</button>
    </div>

    <script>
        const btnNo = document.getElementById('btn-no');
        const btnSi = document.getElementById('btn-si');
        const carta = document.getElementById('carta');
        const cerrar = document.getElementById('cerrar');

        btnNo.addEventListener('mouseenter', () => {
            // Mueve el botón "No" a una posición aleatoria dentro del frame
            const frame = document.querySelector('.frame');
            const maxX = frame.offsetWidth - btnNo.offsetWidth;
            const maxY = frame.offsetHeight - btnNo.offsetHeight;
            const x = Math.floor(Math.random() * maxX);
            const y = Math.floor(Math.random() * maxY);
            btnNo.style.left = x + 'px';
            btnNo.style.top = y + 'px';
        });

        btnSi.addEventListener('click', () => {
            carta.style.display = 'block';
        });

        cerrar.addEventListener('click', () => {
            carta.style.display = 'none';
        });
    </script>
</body>
